# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Map static resources from the /public folder to the /assets URL path
GET 	/assets/js/routes			controllers.Application.javascriptRoutes
GET     /assets/*file               controllers.Assets.at(path="/public", file)

# Home page
GET     /                           controllers.Application.index

# Login page
GET     /login                      controllers.Login.index
GET		/dashboard					controllers.Dashboard.index
GET		/map						controllers.Map.index
GET		/map2						controllers.Map2.index

# Channels' management
GET		/channel/index				controllers.Channel.index

# Device
POST	/device/:id/execute			controllers.Device.receiveCommand(id: String)
GET		/device/:id/configure		controllers.Device.configureDevice(id: String)