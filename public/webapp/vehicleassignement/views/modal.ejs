<div class="modal">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h3>Vehicles assignements</h3>
  </div>
  <div class="modal-body">
	<div class="ana-devices">
		<table class="table table-condensed table-bordered table-striped vehicle-assignements">
			<thead>
				<tr>
					<th>ID</th>
					<th>Vehicle</th>
					<th>Driver</th>
					<th>Begin Assignement</th>
					<th>End Assignement</th>
					<th>Enabled</th>
					<th><span class="span2"></span></th>
				</tr>
			</thead>
			<tbody>
			<%for(i in assignements) {%>
				<tr <%=plugin('webapp_vehicle_assignements_row', $.extend(assignements[i], {vehicles: vehicles, drivers: drivers}))%>></tr>	
			<%}%>
			</tbody>
		</table>
		<button class="btn btn-primary create">Create new vehicle assignment</button>
		<button class="btn btn-primary save-all">Save all</button>
		</div>
  </div>
  </div>
 </div>
