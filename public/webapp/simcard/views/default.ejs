
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <% if (version > -1) {%>
    <h3>Modify simcard «<%=imei%>» (<%=id%>)</h3>
    <% } else {%>
    <h3>New simcard</h3>
    <% } %>
  </div>
  <div class="modal-body">

	<div class="alert_placeholder"></div>

    <form class="form-horizontal">
	  <div class="control-group">
	    <label class="control-label" for="imei">IMEI</label>
	    <div class="controls">
	      <input type="text" name="imei" id="imei" placeholder="imei" value="<%=imei%>">
	    </div>
	  </div>
	  
	  <div class="control-group">
	    <label class="control-label" for="display_name">Display name</label>
	    <div class="controls">
	      <input type="text" name="displayName" id="displayName" placeholder="display name" value="<%=displayName%>">
	    </div>
	  </div>
	  
	  <div class="control-group">
	    <label class="control-label" for="description">Description</label>
	    <div class="controls">
	      <input type="text" name="description" id="description" placeholder="description" value="<%=description%>">
	    </div>
	  </div>
	  
	  <div class="control-group">
	    <label class="control-label" for="mobileNumber">Mobile Number</label>
	    <div class="controls">
	      <input type="text" name="mobileNumber" id="mobileNumber" placeholder="mobile number" value="<%=mobileNumber%>">
	    </div>
	  </div>
	  
	  <div class="control-group">
	    <label class="control-label" for="carrierId">Carrier</label>
	    <div class="controls">
	      <input type="text" name="carrierId" id="carrierId" placeholder="carrier" value="<%=carrierId%>">
	    </div>
	  </div>
	  	  
	  <div class="control-group">
		  <label class="control-label" for="enabled">Enabled</label>
		    <div class="controls">
		    <div class="switch">
		      <input type="checkbox" id="enabled" placeholder="enabled" name="enabled" <% if (enabled){%>checked<%}%> >
		      </div>
		    </div>
	   </div>
	   
	 <% if (version > -1) {%>
	   <div class="control-group">
		  <label class="control-label" for="enabled">Creation time</label>
		    <div class="controls"><span class="uneditable-input"><%=creationTime%></span></div>
	   </div>
	   <div class="control-group">
		  <label class="control-label" for="enabled">Last modification time</label>
		    <div class="controls"><span class="uneditable-input"><%=modificationTime%></span></div>
	   </div>
	 <%}%>
	 <input type="hidden" name="version" value="<%=version%>">
	</form>

  </div>
  <div class="modal-footer">
    <a href="javascript: void(0);" class="btn btn-cancel">Cancel</a>
    <% if (id > 0) {%> 
    <a href="javascript: void(0);" class="btn btn-primary update">Update</a>
    <% } else { %>
    <a href="javascript: void(0);" class="btn btn-primary create">Create</a>
    <% } %>
  </div>
