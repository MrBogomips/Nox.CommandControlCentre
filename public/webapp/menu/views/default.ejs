<div class="navbar">
	<div class="navbar navbar-static">
		<div class="navbar-inner">
			<div class="container" style="width: auto;">
				<a class="brand" href="#">Nox</a>

				<ul class="nav" role="navigation">
					<% for(i in menu) {%>
						<li class="dropdown">
							<% var dropdown = "";
								var enable = "";
								if ((menu[i].button.sub != null) && (menu[i].button.sub.length > 0)) {
									dropdown = "dropdown-toggle";
								}
								if (menu[i].enable == false) {
									enable = "workinprogress";
								}
							%>
							<a data-toggle="dropdown" class="<%= dropdown %> <%= enable %>" role="button" id="drop<%= menu[i].button.label %>" href="#">
								<% if ((menu[i].button.icon != null) && (menu[i].button.icon != "")) { %>
									<i class="<%= menu[i].button.icon %> icon-white"></i>
								<% } %>
								<%= menu[i].button.label %>
								<% if (menu[i].button.sub.length > 0) { %>
									<b class="caret"></b>
								<% } %>
							</a>
							<% if ((menu[i].button.sub != null) && (menu[i].button.sub.length > 0)) { %>
								<ul aria-labelledby="drop2" role="menu" class="dropdown-menu">
									<% for(x in menu[i].button.sub) {
										switch (menu[i].button.sub[x].type) {
											case "text" : %>
												<li>
													<a href="<%= menu[i].button.sub[x].button.uri %>" class="<%= menu[i].button.sub[x].enable == true ? '' : 'workinprogress' %>" tabindex="-1">
														<% if ((menu[i].button.sub[x].button.icon != null) && (menu[i].button.sub[x].button.icon != "")) { %>
															<i class="<%= menu[i].button.sub[x].button.icon %>"></i>
														<% } %>
														<%= menu[i].button.sub[x].button.label %>
													</a>
												</li>
												<% break;
											case "divider" : %>
												<li class="divider"></li>
												<% break;
										}
									} %>
								</ul>
							<% } %>
						</li>
					<% } %>
				</ul>
				
				<ul class="nav pull-right">
					<!--@{/***** MESSAGES *****/}-->
					<li class="dropdown">
						<a href="#" role="button"><span class="badge badge-inverse">123 <i class="icon-large icon-envelope icon-white"></i></span></a>
					</li>
					<!--@{/***** BADGE EVENTS *****/}-->
