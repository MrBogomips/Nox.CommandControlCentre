<!-- Device Commands -->
<div class="modal hide fade info settings" tabindex="-1" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3>Device «<%=device%>»</h3>
  </div>
  <div class="alerts"></div>
  <div class="modal-body">
    <%
      if (info != null) {
    %>
          <div class="basic-info">
          <div class="data">
            <table class="table table-condensed table-bordered table-striped" style="width: 530px;">
              <caption>Basic info</caption>
              <thead>
                <tr>
                  <th class="attribute">Attribute</th>
                  <th class="setting">Value</th>
                </tr>
              </thead>
              <tbody>
                <%
                  if (info.id != undefined) {
                %>
                    <tr><td><em>Device ID</em></td>           <td><span><%= info.id %></span></td></tr>
                <%
                  }
                  if (info.displayName != undefined) {
                %>
                    <tr><td><em>Display Name</em></td>          <td><span><%= info.displayName %></span></td></tr>
                <%
                  }
                  if (info.description != undefined) {
                %>
                    <tr><td><em>Description</em></td>         <td><span><%= info.description %></span></td></tr>
                <%
                  }
                  if (info.simcard != undefined) {
                %>
                    <tr><td><em>Simcard</em></td>           <td><span><%= info.simcard.displayName %></span></td></tr>
                <%
                  }
                  if (info.vehicle != undefined) {
                %>
                    <tr><td><em>Vehicle</em></td>           <td><span><%= info.vehicle.displayName %></span></td></tr>
                <%
                  }
                  if (info.deviceType != undefined) {
                %>
                    <tr><td><em>Type</em></td>              <td><span><%= info.deviceType.displayName %></span></td></tr>
                <%
                  }
                  if (info.deviceGroup != undefined) {
                %>
                    <tr><td><em>Group</em></td>             <td><span><%= info.deviceGroup.displayName %></span></td></tr>
                <%
                  }
                  if (info.enabled != undefined) {
                %>
                    <tr><td><em>Enabled</em></td>           <td><span><%= info.enabled %></span></td></tr>
                <%
                  }
                %>
              </tbody>
            </table>
          </div>
        </div>
    <%
      }
    %>
      <div class="progress progress-striped active">
  		  <div class="bar" style="width: 100%;"></div>
	   </div>
  </div>
  <div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
  </div>
</div>

